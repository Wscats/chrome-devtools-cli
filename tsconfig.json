{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/core",
        "noEmitOnError": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        // 给错误和消息设置样式，使用颜色和上下文
        "pretty": true,
        // 兼容 babel 模块导入的模式（不需要 * as）
        "esModuleInterop": true,
        // 支持引入 json 模块
        "resolveJsonModule": true,
        // React 项目需要配置此项
        "jsx": "react",
    }
}